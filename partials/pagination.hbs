<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-circle-left"></i> Novos</a>
    {{/if}}
    <span class="page-number">Pagina {{page}} de {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Antigos <i class="fa fa-chevron-circle-right"></i></a>
    {{/if}}
</nav>
